{
  "devDependencies": {
    "concurrently": "^8.2.2",
    "tailwindcss": "^3.4.4"
  },
  "scripts": {
    "build:css": "npx tailwindcss -i ./src/input.css -o ./dist/output.css",
    "watch:css": "npx tailwindcss -i ./src/input.css -o ./dist/output.css --watch",
    "start": "concurrently \"npm run watch:css\""
  }
}
